@model BTL_ASPdotNet.Models.ForgotPasswordViewModel

<section class="header_text sub">
	<img class="pageBanner" src="~/Content/themes/images/pageBanner.png" alt="New products">
	@*<h4><span>Login</span></h4>*@
</section>
<section class="main-content">
	<div class="row">
		<div class="span5">
			<h4 class="title"><span class="text"><strong>Forgot Password</strong> Form</span></h4>
			@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
			{
				@Html.AntiForgeryToken()
				@Html.ValidationSummary("", new { @class = "text-danger" })
				<input type="hidden" name="next" value="/">
				<fieldset>
					<div class="control-group">
						<label class="control-label">Your Email</label>
						<div class="controls">
							@Html.TextBoxFor(m => m.Email, new { @class = "input-xlarge", placeholder = "Enter your email" })
						</div>
					</div>
					<div class="form-group" style="padding-left:20%;">
						<input tabindex="3" class="btn btn-inverse large" type="submit" value="Email Link">
					</div>
				</fieldset>
			}
		</div>
	</div>
</section>
